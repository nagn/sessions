<h1>Add a new Session</h1>
<%= form_for(@session) do |f| %>
  <ul>
  <% @session.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :kind %><br />
    <%= f.text_field :kind %>
  </p>
  <%= f.label :date %><br />
  <%= f.text_field :date, :id => "datepicker" %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :id => "description_field" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
